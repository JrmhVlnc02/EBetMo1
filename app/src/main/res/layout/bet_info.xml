<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="30dp"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:padding="15dp"
            android:orientation="vertical"
            android:background="@color/panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instruction"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="@color/blue"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="18sp"
                android:text="1. Make sure your balance is enough before betting."
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="18sp"
                android:text="2. Choose into (depends on the number of slots). ex. 1-100 slots."
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="18sp"
                android:text="3. Wait for the scheduled raffle draw."
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="18sp"
                android:text="4. Check your verification. (we'll let you notified what number had draw in every item you'd bet on."
                android:layout_marginBottom="10dp"/>



            <Button
                android:id="@+id/ok_btn"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="OK"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/panel"
                android:background="@drawable/white_panel"
                android:textSize="16sp"
                android:textAllCaps="false"/>


        </LinearLayout>



    </androidx.cardview.widget.CardView>



</RelativeLayout>